<section class="feature_part" style="padding-top: 85px;">
    <div class="container-fluid">
        <div class="row">
            <%= render "common_views/right_side_bar" %>
            <!-- Breadcrumbs-->
            <!-- <ol class="breadcrumb">
                <li class="breadcrumb-item active">In Progress Print</li>
            </ol> -->
            <div class="col col-10">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="#">Dashboard</a>
                    </li>
                    <li class="breadcrumb-item active">Upload Documents</li>
                </ol>
                <%= form_for @upload_document, url: save_group_path do |f| %>
                <div class="form-group">
                    <div class="form-label-group">
                        <%= f.text_field :document_name, autofocus: true, :class => 'form-control', :placeholder => 'Document Name', :required => 'required' %>
                        <%= f.label :document_name %>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-label-group">
                        <%= f.hidden_field :document, value: f.object.cached_document_data %>
                        <%= f.file_field :document , class: 'uploadDocument' %>
                        <%= f.label :document %>
                        <% if @upload_document.errors[:document] %>
                        <ul class="errors">
                            <%= @upload_document.errors.full_messages_for(:document).map { |msg| content_tag(:li, msg) }.uniq.join.html_safe %>
                        </ul>
                        <% end %>
                    </div>
                    <%= f.submit "Upload", :class => 'btn_1', :id => 'upload_submit_button' %>
                    <% end %>
                    <div id="loader_wrap">
                        <%#= image_tag ("loader.gif"), :id=>'loader_img',:style => "width: 100;height:100" %>
                        <img src="/images/loader.gif" id="loader_img" width="100" height="100">
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<script>
    $(document).ready(function() {
        $("#new_upload_document").on("submit", function() {
            $("#upload_submit_button").hide();
            $('#loader_wrap').show();
        });
    });
</script>