<section class="">
    <div class="container-fluid">
        <div class="row">
            <div class="col col-12">
                <div class="card-mb-3">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item active">In Progress Print</li>
                    </ol>
                    <div class="card-header">
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered document_table" id="dataTable" width="100%" cellspacing="0" data-turbolinks="false">
                                <thead>
                                    <tr>
                                        <th width="40%">Submitted On</th>
                                        <th width="20%">Status</th>
                                        <!-- <th width="20%">Payment Type </th> -->
                                        <th width="20%">Show Details</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% @progress_groups.each do |group| %>
                                    <tr data-id="<%= group.id%>" class="document_record">
                                        <td>
                                            <%= group.submitted_time.strftime("%l:%M %p ,     %d %B %Y") %>
                                        </td>
                                        <td>
                                            <%= group.status %>
                                        </td>
                                        <!-- <td> -->
                                        <%#= group.payment_type.capitalize %>
                                        <!-- </td> -->
                                        <td>
                                            <%= link_to 'Details', { controller: :groups, action: :edit, id: group.id}, :class => 'group_detail_anchor'  %>
                                        </td>
                                    </tr>
                                    <% end %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <% if @progress_groups.present?%>
                <div class="card-footer small text-muted">Updated at
                    <%= @progress_groups.first.updated_at.strftime("%d %B %Y , %l:%M %p") %>
                </div>
                <% end %>
            </div>
</section>
<script>
$(document).ready(function() {
    $('#dataTable').DataTable({
        "responsive": true,
        "ordering": false
    });
});
</script>