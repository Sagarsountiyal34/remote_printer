<h3>New Discount</h3><br>
<%= form_for(@discount, url: discounts_path) do |f| %>
<div class="form-group">
    <div class="form-row">
        <div class="col-md-6">
            <div class="form-label-group">
                <%= f.text_field :desc, autofocus: true, :class => 'form-control', :placeholder => 'Discount Description', :required => 'required'%>
                <%= f.label :desc %><br />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-label-group">
                <%= f.number_field :discount_value, :class => 'form-control', :placeholder => 'Discount value in %', :required => 'required', max: 60 %>
                <%= f.label :discount_value %>
            </div>
        </div>
    </div>
</div>
<%= f.submit "Save", :class => "btn_1" %>
<% end %>