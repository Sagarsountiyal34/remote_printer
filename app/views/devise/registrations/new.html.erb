<div class="card card-register mx-auto mt-5">
  <div class="card-header">Register an Account</div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="form-group">
        <div class="form-label-group">
          <!-- <input type="email" id="inputEmail" class="form-control" placeholder="Email address" required="required"> -->
          <!-- <label for="inputEmail">Email address</label> -->
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'form-control', :placeholder => 'Email Address', :required => 'required'%>
          <%= f.label :email %><br />
        </div>
      </div>
      <div class="form-group">
        <div class="form-row">
          <div class="col-md-6">
            <div class="form-label-group">
              <%= f.password_field :password, autocomplete: "new-password", :class => 'form-control', :placeholder => 'Password', :required => 'required' %>
              <%= f.label :password %>
            </div>
            <ul>
            <%= resource.errors.full_messages_for(:password).map { |msg| content_tag(:li, msg) }.uniq.join.html_safe %>
          </ul>
          </div>
          <div class="col-md-6">
            <div class="form-label-group">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", :class=> 'form-control', :placeholder => 'Confirm Password',:required => 'required'%>
              <%= f.label :password_confirmation %>
            </div>
            <%= resource.errors.full_messages_for(:password_confirmation).map { |msg| content_tag(:li, msg) }.uniq.join.html_safe %>
          </div>
        </div>
      </div>
      <%= f.submit "Sign up", :class => "btn btn-primary btn-block" %>
    <% end %>
    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
