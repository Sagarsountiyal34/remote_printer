<!-- Breadcrumbs-->
<ol class="breadcrumb">
    <li class="breadcrumb-item active">All Users</li>
</ol>
<div id="users">
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Total Users: <span id="total_group_item">
                <%= @users.count %></span>
            <!-- <span style="float:right;">
                <i class="fas fa-table"></i>
                Temp: 1
            </span> -->
        </div><br>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered document_table" id="userTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th width="40%">Email</th>
                            <th width="25%">OTP</th>
                            <th width="25%">Confirmed</th>
                            <th width="10%">Details</th>
                        </tr>
                    </thead>
                    <tbody id="tbody_head">
                        <% @users.each do |user| %>
                        <a href="">
                            <tr data-id="<%= user.id %>" class="user_record">
                                <td class="email">
                                    <%= user.email %>
                                </td>
                                <td class="otp">
                                    <%= user.confirmable_otp %>
                                </td>
                                <td>
                                    <%= user.otp_confirmed ? 'yes' : 'no' %>
                                </td>
                                <td>
                                    <%= link_to 'Details', show_user_url(:id => user.id.to_s), :class => 'group_detail_anchor'  %>
                                </td>
                            </tr>
                        </a>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
$(document).ready(function() {
    $('#userTable').DataTable({
        "ordering": false,
        "bLengthChange": false,
    });
});
</script>