<div class="container">
    <h2>
        <%= flash[:notice]%>
    </h2>
    <!-- Trigger the modal with a button -->
    <button type="button" class="btn btn-info btn-lg" id="myBtn">Click to confirm with OTP</button>
    <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <!-- <h4 class="modal-title">Modal Header</h4> -->
                </div>
                <div class="modal-body">
                    <form class="form-contact " action="<%= save_otp_path %>" method="POST" id="" style="height:100%">
                        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <input class="form-control" name="confirmable_otp" type="text" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter OTP'" placeholder='Enter OTP' required="">
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn-info btn-lg">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
$(document).ready(function() {
    $("#myBtn").click(function() {
        $("#myModal").modal();
    });
});
</script>