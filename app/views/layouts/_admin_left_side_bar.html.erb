    <div class="w3-container w3-row">
        <div class="w3-col s4">
            <img src="/assets/logo/avatar2.png" class="w3-circle w3-margin-right" style="width:46px">
        </div>
        <div class="w3-col s8 w3-bar">
            <span>
                <%= current_user.email.split('@').first %><strong>(Admin)</strong></span><br>
        </div>
    </div>
    <hr>
    <div class="w3-container">
        <h4>Dashboard</h4>
    </div>
    <div class="w3-bar-block" data-turbolinks="false">
        <%= link_to(all_users_path, :class => "w3-bar-item w3-button w3-padding") do %>
