        <% end %>
        <%= link_to(companies_path, :class => "w3-bar-item w3-button w3-padding") do %>
        <i class="fas fa-building"></i>&nbsp;Companies
        <% end %>
        <%= link_to(new_company_path, :class => "w3-bar-item w3-button w3-padding") do %>
